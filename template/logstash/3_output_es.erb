output {

    elasticsearch {
        codec => "json"
        host => "<%= ENV['OPENSHIFT_ELASTICSEARCH_IP'] %>"
        port => "9200"
        <% if $kibana_elasticsearch_username %>
          user => "$kibana_elasticsearch_username"
        <% end %>
        <% if $kibana_elasticsearch_password %>
          password => "$kibana_elasticsearch_password"
        <% end %>
        idle_flush_time => 1
        protocol => "http"
        workers => 1
      }
}
